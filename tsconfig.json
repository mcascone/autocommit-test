{
  "compilerOptions": {
    "target": "es6",        
    "module": "commonjs",    
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
